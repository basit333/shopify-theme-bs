<!-- /templates/customers/login.liquid -->

<div class="container py-5 my-5">
  <h2 class="h3 text-center mb-3">Login</h2>
  <div class="login-form">
    {% form 'customer_login' %}
      {% include 'form-error', form: form %}

      <label for="customer_email">Email Address</label>
      <input
        type="email"
        name="customer[email]"
        class="form-control rounded-0 my-2" />

      <label for="customer_password">Password</label>
      <input
        type="password"
        name="customer[password]"
        class="form-control rounded-0 my-2" />

      <input
        type="submit"
        value="Sign In"
        class="btn btn-primary btn-lg w-100 rounded-0" />

    {% endform %}

    <a
      href="#recover"
      id="forgotPassoword"
      class="text-center">Forgot your passowrd?</a>
  </div>
  <div id="forgot_passoword_form" class="forgot-password-form d-none mt-3">
    {% form 'recover_customer_password' %}
      {% include 'form-error', form: form %}
      <div class="col-12">
        <label for="resetPassword" class="form-label">Email Address</label>
        <input
          class="form-control mb-3"
          type="email"
          name="email"
          id="resetPassword">
      </div>
      <input
        class="btn btn-secondary"
        type="submit"
        value="Reset Password">
    {% endform %}
  </div>
</div>